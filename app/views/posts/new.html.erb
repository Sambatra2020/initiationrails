<h1>Creer un article</h1>

<%= form_for @post do |f| %>
  <div class="fo form-group align-middle">
    <label>EDITER LE NOM</label>
    <%= f.text_field :name , class: 'form-control' %>
  </div>
  <div class="fo form-group align-middle">
    <label>EDITER L'AGE</label>
    <%= f.text_field :age , class: 'form-control' %>
  </div>
  <div class="fo form-group align-middle">
    <label>EDITER LE SEXE</label>
    <%= f.text_field :sexe , class: 'form-control' %>
  </div>
  <div class="fo form-group align-middle">
    <button type="submit" class="btn btn-success">Creer un article</button>
  </div>
<% end %>
